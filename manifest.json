{
  "manifest_version": 3,
  "name": "Website IP",
  "description": "Simple Chrome Extension to get the current website IP address.",
  "version": "3.0",
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://dns.google/",
    "https://cloudflare-dns.com/"
  ],
  "options_page": "options.html"
}
